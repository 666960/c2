form gamepadForm
{
    theme = res/common/gamepad.theme
    autoWidth = true
    autoHeight = true

    container left
    {
        alignment = ALIGN_BOTTOM_LEFT
        size = 300, 300
        joystick
        {
            style = joystickStyle
            alignment = ALIGN_VCENTER_HCENTER
            size = 200, 200
            radius = 64
        }
    }

    container right
    {
        alignment = ALIGN_BOTTOM_RIGHT
        size = 256, 256

        container inner
        {
            size = 230, 230
            alignment = ALIGN_VCENTER_HCENTER
            button
            {
                style = buttonAStyle
                size = 128, 128
                alignment = ALIGN_BOTTOM_LEFT
            }

            button
            {
                style = buttonBStyle
                size = 128, 128
                alignment = ALIGN_TOP_RIGHT
            }
        }
    }
}