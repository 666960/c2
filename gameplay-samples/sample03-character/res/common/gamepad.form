form gamepadForm
{
	theme = res/common/gamepad.theme
    layout = LAYOUT_ABSOLUTE
	position = 0, 0
    autoWidth = true
    autoHeight = true

    joystick
	{
		style = joystickStyle
		size = 200, 200
	    alignment = ALIGN_BOTTOM_LEFT
		radius = 64
    }

    button
    {
        style = buttonStyle
        size = 128, 128
        alignment = ALIGN_BOTTOM_RIGHT
    }
}