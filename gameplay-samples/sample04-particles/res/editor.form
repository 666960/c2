form particleEditor
{
    theme = res/editor.theme
    style = background
    autoWidth = true
    autoHeight = true

    // Diagnostics
    container diagnostics
    {
        style = noBorder
        size = 200, 50
        alignment = ALIGN_TOP_HCENTER
        layout = LAYOUT_VERTICAL

        // Number of currently alive particles
        label particlesCount
        {
            style = iconNoBorder
            autoWidth = true
            height = 25
            text = Particles: 0
        }

        // FPS
        label FPS : particlesCount
        {
            text = FPS: 0
        }
    }

    // Camera Zoom
    container zoom
    {
        style = noBorder
        size = 100, 100
        alignment = ALIGN_BOTTOM_HCENTER
        layout = LAYOUT_VERTICAL

        button zoomIn
        {
            style = buttonStyle
            size = 100, 50
            text = Zoom In
        }

        button zoomOut : zoomIn
        {
            text = Zoom Out
        }
    }

    container presets
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 0
        size = 160, 200

        label title
        {
            style = title
            size = 140, 30
            text = Presets
        }

        radioButton spiralFlame
        {
           style = iconNoBorder
           text = Fire
           group = presets
           size = 140, 50
           selected = true
        }

        radioButton smoke : spiralFlame
        {
            text = Smoke
            selected = false
        }

        radioButton explosion : smoke
        {
            text = Explosion
        }
    }

    // Emission settings
    container emission
    {
        style = basic
        position = 0, 200
        layout = LAYOUT_VERTICAL
        size = 160, 220

        // Burst emission
        button emit
        {
            style = buttonStyle
            position = 0, 50
            size = 140, 50
            text = Emit
        }

        // Emission rate
        slider emissionRate
        {
            style = noBorder
            size = 140, 50
            orientation = HORIZONTAL
            min = 1
            max = 500
            value = 100
            step = 0
            text = Emission Rate
        }

        slider burstSize : emissionRate
        {
            text = Burst Size
            value = 20
            max = 50
            step = 1
        }

        // Start / Stop Emitter
        checkBox started
        {
            style = iconNoBorder
            size = 140, 50
            text = Running
            checked = true
        }
    }

    button minimize
    {
        style = buttonStyle
        alignment = ALIGN_TOP_RIGHT
        size = 50, 50
        text = -
    }

    container particleProperties
    {
        style = basic
        alignment = ALIGN_TOP_RIGHT
        size = 340, 480

        container colorSettings
        {
            style = noBorder
            layout = LAYOUT_VERTICAL
            alignment = ALIGN_TOP_LEFT
            size = 150, 460

            label titleStartColor
            {
                style = title
                size = 150, 30
                text = Start Color
            }

            slider startRed
            {
                style = noBorder
                size = 150, 50
                orientation = HORIZONTAL
                min = 0
                max = 1
                text = Red
            }

            slider startGreen : startRed
            {
                text = Green
            }

            slider startBlue : startRed
            {
                text = Blue
            }

            slider startAlpha : startRed
            {
                text = Alpha
            }

            label titleEndColor : titleStartColor
            {
                text = End Color
            }

            slider endRed : startRed
            {
            }

            slider endGreen : startGreen
            {
            }

            slider endBlue : startBlue
            {
            }

            slider endAlpha : startAlpha
            {
            }
        }

        container sizeEnergySettings
        {
            style = noBorder
            alignment = ALIGN_BOTTOM_RIGHT
            layout = LAYOUT_VERTICAL
            size = 150, 360

            // Particle Size
            label titleSize
            {
                style = title
                size = 150, 30
                text = Size
            }

            slider startMin
            {
                style = noBorder
                size = 150, 50
                orientation = HORIZONTAL
                min = 0
                max = 5
                value = 1.5
                step = 0
                text = Min. Begin Size
            }

            slider startMax : startMin
            {
                text = Max. Begin Size
            }

            slider endMin : startMin
            {
                text = Min. End Size
            }

            slider endMax : startMin
            {
                text = Max. End Size
            }

            // Energy
            label titleEnergy
            {
                style = title
                size = 150, 30
                text = Energy
            }

            slider energyMin
            {
                style = noBorder
                size = 150, 50
                orientation = HORIZONTAL
                min = 0
                max = 10000
                text = Min. Energy
            }

            slider energyMax : energyMin
            {
                text = Max. Energy
            }
        }        
    }
}