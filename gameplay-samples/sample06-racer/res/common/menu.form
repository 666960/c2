form menu
{
    theme = res/common/menu.theme
    width = 320
    height = 140
    alignment = ALIGN_VCENTER_HCENTER
    style = basic

    // Controls
    container controlsContainer
    {
        style = noBorder
        position = 0, 0
        autoWidth = true
        height = 60

        label controlsLabel
        {
            style = title
            alignment = ALIGN_TOP_HCENTER
            autoWidth = true
            height = 30
            text = Controls
        }

        radioButton useGamepad
        {
            style = iconNoBorder
            group = controls
            position = 0, 25
            size = 150, 40
            imageSize = 35, 35
            selected = true
            text = Gamepad
        }

        radioButton useTilt : useGamepad
        {
            position = 150, 25
            text = Tilt
            selected = false
        }
    }

    // Reset
    button resetButton
    {
        style = buttonStyle
        position = 0, 70
        size = 150, 50
        text = Reset
    }

    // Exit
    button exitButton : resetButton
    {
        position = 150, 70
        text = Exit
    }
}