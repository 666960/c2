form menu
{
    theme = res/common/menu.theme
    width = 300
    height = 300
    alignment = ALIGN_TOP_HCENTER

    // Reset
    button resetButton
    {
        style = buttonStyle
        position = 0, 0
        size = 150, 50
        text = Reset
    }

    // Exit
    button exitButton : resetButton
    {
        position = 150, 0
        text = Exit
    }

    // Controls
    container controlsContainer
    {
        style = basic
        position = 0, 50
        autoWidth = true
        height = 100

        label controlsLabel
        {
            style = title
            alignment = ALIGN_TOP_HCENTER
            autoWidth = true
            height = 40
            text = Controls
        }

        radioButton useGamepad
        {
            style = iconNoBorder
            group = controls
            position = 0, 40
            size = 150, 40
            imageSize = 35, 35
            selected = true
            text = Gamepad
        }

        radioButton useTilt : useGamepad
        {
            position = 150, 40
            text = Tilt
            selected = false
        }
    }
}